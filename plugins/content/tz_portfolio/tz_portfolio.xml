<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>Content-TZ Portfolio</name>
	<author>DuongTVTemPlaza</author>
	<creationDate>January 25th 2013</creationDate>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>support@templaza.com</authorEmail>
	<authorUrl>www.templaza.com/</authorUrl>
	<version>3.2.4</version>

	<files>
        <filename plugin="tz_portfolio">tz_portfolio.php</filename>
		<filename>index.html</filename>
	</files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.plg_content_tz_portfolio.ini</language>
        <language tag="pt-BR">pt-BR/pt-BR.plg_content_tz_portfolio.ini</language>
        <language tag="ja-JP">ja-JP/ja-JP.plg_content_tz_portfolio.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_content_tz_portfolio.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="use_short_code" type="radio" default="1"
                        class="btn-group" label="PLG_CONTENT_TZ_PORTFOLIO_USE_SHORT_CODE_LABEL"
                        description="PLG_CONTENT_TZ_PORTFOLIO_USE_SHORT_CODE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
	
</extension>
