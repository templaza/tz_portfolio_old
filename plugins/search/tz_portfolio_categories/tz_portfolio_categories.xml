<extension version="3.0" type="plugin" group="search" method="upgrade">
	<name>plg_search_tz_portfolio_categories</name>
	<author>DuongTv</author>
	<creationDate>27th September 2012</creationDate>
    <copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
    <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>support@templaza.com</authorEmail>
    <authorUrl>www.templaza.com/</authorUrl>
    <version>3.2.4</version>
    <description>PLG_SEARCH_TZ_PORTFOLIO_CATEGORIES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="tz_portfolio_categories">tz_portfolio_categories.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_search_tz_portfolio_categories.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_tz_portfolio_categories.sys.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.plg_search_tz_portfolio_categories.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.plg_search_tz_portfolio_categories.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_search_tz_portfolio_categories.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_search_tz_portfolio_categories.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_search_tz_portfolio_categories.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_search_tz_portfolio_categories.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					default="1" class="btn-group"
					description="JFIELD_PLG_SEARCH_ALL_DESC"
					label="JFIELD_PLG_SEARCH_ALL_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="search_archived" type="radio"
					default="1" class="btn-group"
					description="JFIELD_PLG_SEARCH_ARCHIVED_DESC"
					label="JFIELD_PLG_SEARCH_ARCHIVED_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
