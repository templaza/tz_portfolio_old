<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>mod_tz_portfolio_articles_popular</name>
	<author>DuongTVTemplaza</author>
	<creationDate>January 25th 2013</creationDate>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>support@templaza.com</authorEmail>
	<authorUrl>www.templaza.com/</authorUrl>
	<version>3.2.4</version>
	<description>MOD_POPULAR_XML_DESCRIPTION
  <![CDATA[
    <link rel="stylesheet" type="text/css" href="../modules/mod_tz_portfolio_articles_popular/admin/stylemodule/tz-style-module.css" />
    ]]>
  </description>
	<files>
		<filename module="mod_tz_portfolio_articles_popular">mod_tz_portfolio_articles_popular.php</filename>
		<folder>tmpl</folder>
		<folder>admin</folder>
		<folder>css</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_tz_portfolio_articles_popular.xml</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_popular.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_popular.sys.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_popular.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_popular.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_popular.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_popular.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_popular.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_popular.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MOST_READ" />
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_POPULAR_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>

				<field
					name="count"
					type="text"
					default="5"
					label="MOD_POPULAR_FIELD_COUNT_LABEL"
					description="MOD_POPULAR_FIELD_COUNT_DESC" />

					<field
					name="show_front"
					 type="radio" class="btn-group"
					default="1"
					label="MOD_POPULAR_FIELD_FEATURED_LABEL"
					description="MOD_POPULAR_FIELD_FEATURED_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>

			</fieldset>
            
             <fieldset name="view">
                 <field name="show_article" type="radio"
                        class="btn-group" default="1"
                        label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_SHOW_ARTICLE_LABEL">
                     <option value="1">JSHOW</option>
                     <option value="0">JHIDE</option>
                 </field>
                 <field name="tz_show_title"
                         type="radio" class="btn-group"
                        default="1"
                        label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_TITLE"
                        description="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_TITLE_DESC"
                 >
                     <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                 </field>
                 <field name="tz_show_introtext"
                         type="radio" class="btn-group"
                        default="1"
                        label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_INTROTEXT"
                        description="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_INTROTEXT_DESC"
                 >
                     <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                 </field>
                 <field name="tz_counter"
                         type="text"
                         default="10"
                         label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_COUNTER"
                         description="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_COUNTER_DESC">
                     
                 </field>
                 <field name="show_tz_image"
                          type="radio" class="btn-group"
                         default="1"
                         label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_IMAGE"
                         description="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_SHOW_IMAGE_DESC">
                     <option value="1">JSHOW</option>
                     <option value="0">JHIDE</option>
                 </field>

                <!--<field name="tz_image_width" type="text"-->
                       <!--default="40"-->
                       <!--label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_IMAGE_WIDTH"></field>-->
                 <!--<field name="tz_image_height" type="text"-->
                        <!--default="40"-->
                       <!--label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_IMAGE_HEIGHT"></field>-->
                 <!--<field name="tz_image_crop" type="text"-->
                       <!--label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_IMAGE_CROP"-->
                         <!--description="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_IMAGE_CROP_DESC"></field>-->
                 <field name="tz_image_size" type="list"
                        default="S"
                        label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_TZ_IMAGE_SIZE">
                    <option value="XS">XSmall</option>
                    <option value="S">Small</option>
                    <option value="M">Medium</option>
                    <option value="L">Large</option>
                    <option value="XL">XLarge</option>
                </field>
            </fieldset>

            <fieldset name="quote_link_options" label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_QUOTE_LINK_FIELDSET_LABEL">
                <field name="show_quote" type="radio"
                    class="btn-group" default="1"
                    label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_FIELD_QUOTE_LABEL">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
                <field name="show_quote_author" type="radio"
                       class="btn-group" default="1"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_SHOW_QUOTE_AUTHOR_LABEL">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field name="show_link" type="radio"
                    class="btn-group" default="1"
                    label="MOD_TZ_PORTFOLIO_ARTICLES_POPULAR_FIELD_LINK_LABEL">
                    <option value="1">JSHOW</option>
                    <option value="0">JHIDE</option>
                </field>
            </fieldset>

			<fieldset
				name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
