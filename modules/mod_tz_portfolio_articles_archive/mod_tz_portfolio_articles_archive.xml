<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site"
	method="upgrade"
>
	<name>mod_tz_portfolio_articles_archive</name>
	<author>DuongTVTemplaza</author>
	<creationDate>January 25th 2013</creationDate>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>support@templaza.com</authorEmail>
	<authorUrl>www.templaza.com/</authorUrl>
	<version>3.2.4</version>
	<description>MOD_ARTICLES_ARCHIVE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_tz_portfolio_articles_archive">mod_tz_portfolio_articles_archive.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_tz_portfolio_articles_archive.xml</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_archive.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_archive.sys.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_archive.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_archive.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_archive.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_archive.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_archive.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_archive.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ARTICLES_ARCHIVE" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="count" type="text"
					default="10"
					label="MOD_ARTICLES_ARCHIVE_FIELD_COUNT_LABEL"
					description="MOD_ARTICLES_ARCHIVE_FIELD_COUNT_DESC" />
                <field name="redirect_to" type="list"
                       default="date"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_REDIRECT_TO_LABEL"
                        description="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_REDIRECT_TO_DESC">
                    <option value="archive">MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_VIEW</option>
                    <option value="date">MOD_TZ_PORTFOLIO_ARTICLES_DATE_VIEW</option>
                </field>
                <field name="show_article_count" type="radio"
                       class="btn-group" default="1"
                       label="MOD_TZ_PORTFOLIO_ARTICLES_ARCHIVE_SHOW_ARTICLE_COUNT_LABEL"
                        description="MO_TZ_PORTFOLIO_ARTICLES_ARCHIVE_SHOW_ARTICLE_COUNT_DESC">
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field name="moduleclass_sfx" type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field name="cache" type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field name="cache_time" type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
