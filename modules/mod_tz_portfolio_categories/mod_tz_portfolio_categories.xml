<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>mod_tz_portfolio_categories</name>
	<author>DuongTVTemplaza</author>
	<creationDate>January 25th 2013</creationDate>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>support@templaza.com</authorEmail>
	<authorUrl>www.templaza.com/</authorUrl>
	<version>3.3.1</version>
	<description>MOD_CATEGORIES_XML_DESCRIPTION
     <![CDATA[
    <link rel="stylesheet" type="text/css" href="../modules/mod_tz_portfolio_categories/admin/stylemodule/tz-style-module.css" />
    ]]>
    </description>

    <files>
		<filename module="mod_tz_portfolio_categories">mod_tz_portfolio_categories.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>admin</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_tz_portfolio_categories.xml</filename>
	</files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_categories.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_categories.sys.ini</language>
		<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_categories.ini</language>
        <language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_categories.sys.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_categories.ini</language>
        <language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_categories.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_categories.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_categories.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
          <fieldset name="basic">
            <field name="views" type="list" defautl="menu" description="Views categories">
              <option value="menu">Menu</option>
              <option value="slider">Slider</option>
            </field>
            <field type="category" extension="com_content"
                   multiple="true" name="catid"
                   size="10"
                   label="MOD_TZ_PORTFOLIO_CATEGORIES_CATEGORY"></field>
            <field type="list" name="show_total" defautl="1"
                   label="MOD_TZ_PORTFOLIO_CATEGORIES_SHOW_TOTAL">
                <option value="1">True</option>
                <option value="0">False</option>
            </field>

            <field type="text" name="moduleclass_sfx"
                   label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                   description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC">

            </field>
          </fieldset>
          <fieldset name="slide">
            <field  type="radio" class="btn-group" name="library" defautl="1" label="Load jQuery Library">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </field>
            <field name="slide_width" type="text" defautl="500" description="Slider width (px)" label="Slider Width"/>
            <field name="slide_height" type="text" defautl="250" description="Slider height (px)" label="Slider Height"/>
            <field name="image" defautl="1" description="Show Image" label="Show Image"  type="radio" class="btn-group">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </field>
            <field name="width" type="text" defautl="" description="Width Image (px)" label="Image Width"/>
            <field name="height" type="text" defautl="" description="Height Image (px)" label="Image Height"/>
            <field name="crop" type ="text" defautl="2:1" description="Scale and crop image" label="Crop"/>
            <field name="title" defautl="1" description="Show Category name" label="Show title"  type="radio" class="btn-group">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </field>
            <field name="des" defautl="0" description="Show description" label="Show description"  type="radio" class="btn-group">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </field>
            <field name="readmore" defautl="0" description="Show Read more" label="Show Read more"  type="radio" class="btn-group">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </field>
            <field name="readtext" type ="text" defautl="Read more" description="Text Read more" label="Text Read more"/>
          </fieldset>
        </fields>
    </config>
</extension>