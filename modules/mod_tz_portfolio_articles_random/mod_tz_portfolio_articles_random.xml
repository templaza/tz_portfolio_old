<?xml version="1.0" encoding="utf-8"?>
    <extension type="module" version="3.0" client="site" method="upgrade">
        <name>mod_tz_portfolio_articles_random</name>
        <author>DuongTVTemplaza</author>
        <creationDate>January 25th 2013</creationDate>
        <copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
        <license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
        <authorEmail>support@templaza.com</authorEmail>
        <authorUrl>www.templaza.com/</authorUrl>
        <version>3.3.4</version>
        <description>
            MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_XML_DESCRIPTION
            <![CDATA[
                <link rel="stylesheet" type="text/css" href="../modules/mod_tz_portfolio_articles_popular/admin/stylemodule/tz-style-module.css" />
            ]]>
        </description>
        <files>
            <filename module="mod_tz_portfolio_articles_random">mod_tz_portfolio_articles_random.php</filename>
            <folder>tmpl</folder>
            <filename>helper.php</filename>
            <filename>index.html</filename>
            <filename>mod_tz_portfolio_articles_random.xml</filename>
        </files>
        <languages folder="languages">
            <language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_random.ini</language>
            <language tag="en-GB">en-GB/en-GB.mod_tz_portfolio_articles_random.sys.ini</language>
			<language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_random.ini</language>
            <language tag="ja-JP">ja-JP/ja-JP.mod_tz_portfolio_articles_random.sys.ini</language>
			<language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_random.ini</language>
            <language tag="pt-BR">pt-BR/pt-BR.mod_tz_portfolio_articles_random.sys.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_random.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.mod_tz_portfolio_articles_random.sys.ini</language>
        </languages>
        <config>
            <fields name="params">
                <fieldset name="basic">

                    <field
                        name="catid"
                        type="category"
                        extension="com_content"
                        multiple="true"
                        size="10"
                        default=""
                        label="JCATEGORY"
                        description="MOD_POPULAR_FIELD_CATEGORY_DESC" >
                        <option value="">JOPTION_ALL_CATEGORIES</option>
                    </field>

                    <field
                        name="count"
                        type="text"
                        default="5"
                        label="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_FIELD_COUNT_LABEL"
                        description="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_FIELD_COUNT_DESC" />
                </fieldset>

                 <fieldset name="view">
                     <field name="redirect" type="list" label="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_REDIRECT_LABEL"
                             description="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_REDIRECT_DESC">
                         <option value="article">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_BLOG_ARTICLE</option>
                         <option value="p_article">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_PORTFOLIO_ARTICLE</option>
                     </field>
                     <field name="tz_show_title"
                             type="radio" class="btn-group"
                            default="1"
                            label="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_TZ_SHOW_TITLE"
                            description="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_TZ_SHOW_TITLE_DESC"
                     >
                         <option value="1">JSHOW</option>
                        <option value="0">JHIDE</option>
                     </field>
                     <field name="show_tz_image"
                              type="radio" class="btn-group"
                             default="1"
                             label="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_TZ_SHOW_IMAGE"
                             description="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_TZ_SHOW_IMAGE_DESC">
                         <option value="1">JSHOW</option>
                         <option value="0">JHIDE</option>
                     </field>

                    <field name="tz_image_size" type="list"
                            default="S"
                            label="MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_TZ_IMAGE_SIZE">
                        <option value="o">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_ORIGINAL</option>
                        <option value="XS">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_XSMALL</option>
                        <option value="S">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_SMALL</option>
                        <option value="M">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_MEDIUM</option>
                        <option value="L">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_LARGE</option>
                        <option value="XL">MOD_TZ_PORTFOLIO_ARTICLES_RANDOM_XLARGE</option>
                    </field>
                </fieldset>

                <fieldset
                    name="advanced">

                    <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                    <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                    <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                        <option
                            value="1">JGLOBAL_USE_GLOBAL</option>
                        <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                    </field>

                    <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                    <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                        <option
                            value="static"></option>
                    </field>

                </fieldset>
            </fields>
        </config>
    </extension>